<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="thumbnail">
                    <% if (user.avator && user.avator.length > 0) { %>
                        <img src="<%= user.avator %>" alt="User avator image"></img>
                    <% } else { %>
                        <img src="https://images.unsplash.com/photo-1465508372103-60fc5e6df917?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=e5e542257c88369b7ad059957d4ed3f2&auto=format&fit=crop&w=1017&q=80" alt="Default image"></img>
                    <% } %>
                    <div class="caption-full">
                        <% if (user.email != null && (user.firstName &&user.firstName.length > 0) && (user.lastName && user.lastName.length > 0)) { %>
                                <p>
                                    <strong><%= user.email %></strong>    Name:<%= user.firstName %>-<%= user.lastName %>          
                                </p>
                        <% } %> 
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="well">
                    <h3>Bio</h3>
                    <% if ( user.bio && user.bio.length > 0) { %>
                        <h4><%= user.bio %></h4>
                    <% } %>
                </div>
                    <h3>Campground List</h3>
                    <ul>
                    <% camps.forEach(function(camp) { %>
                        <li>
                            <a href="/campgrounds/<%= camp._id %>"><%= camp.name %></a>
                        </li>
                    <% }) %>
                    </ul>
            </div>
        </div>
    </div>

<% include ../partials/footer %>