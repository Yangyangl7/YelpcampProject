<% include ./partials/header %>

<div class="container">
    <% if (error && error.length > 0) { %>
    <div class="alert alert-danger" role="alert">
        <%= error %>
    </div>    
    <% } %>
    <% if (success && success.length > 0) { %>
    <div class="alert alert-success" role="alert">
        <%= success %>
    </div>    
    <% } %>
</div>

<div class="container">
    <div style="width:30%; margin:20px auto;">
        <h1 style="text-align:center">Sign Up</h1>
    
        <form action="/register" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="username"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="password"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="adminCode" placeholder="adminCode"></input>
            </div>
            <button class="btn btn-lg btn-primary btn-block">Sign Up</button>
        </form>
    </div>
</div>
<% include ./partials/footer %>