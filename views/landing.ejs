<!DOCTYPE>
<html>
    <head>
        <title>YelpCamp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"></link>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript" aysnc></script>
        <link rel="stylesheet" href="/stylesheet/landing.css"></link>
    </head>
    <body>
        
        <div class="container">
            <% if (error & error.length > 0) { %>
             <div class="alert alert-danger" role="alert">
                 <%= error %>
             </div>
            <% } %>
            <% if (success & success.length > 0) { %>
             <div class="alert alert-success" role="alert">
                 <%= success %>
             </div>
            <% } %>
        </div>
        
        <div id="landing-header">
            <h1>Welcome to YelpCamp</h1>
            <a class="btn btn-lg btn-success" href="/campgrounds">View all camps</a>
        </div>
        
        <ul class="slideshow">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
        
    </body>
</html>