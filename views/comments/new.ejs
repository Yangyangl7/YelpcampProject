<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Create a new comment for <%= camp.name %></h1>
        <div style="width:30%; margin:20px auto;">
            <form action="/campgrounds/<%= camp._id %>/comment" method="POST">
                <div class="form-group">
                    <label for="Comment">Comment</label>
                    <input class="form-control" type="text" name="comment[content]" id="Comment" placeholder="text"></input>     
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
             <a href="/campgrounds/<%= camp._id%>">Go Back</a> 
        </div>
    
    </div>
</div>

<% include ../partials/footer %>