<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit comment</h1>
        <div style="width:30%; margin:20px auto;">
            <form action="/campgrounds/<%= camp._id %>/comment/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[content]" value="<%= comment.content %>"></input>     
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
             <a href="/campgrounds/<%= camp._id%>">Go Back</a> 
        </div>
    
    </div>
</div>

