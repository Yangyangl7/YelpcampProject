<% include ../partials/header %>
<div class="container">
    <% if (error && error.length > 0) { %>
    <div class="alert alert-danger" role="alert">
        <%= error %>
    </div>    
    <% } %>
    <% if (success && success.length > 0) { %>
    <div class="alert alert-success" role="alert">
        <%= success %>
    </div>    
    <% } %>
    <div class="row">
        <div class="col-md-3">
            <div class="lead">YelpCamp</div>
            <div class="list-group">
                <li class="list-group-item active">Info 1</>
                <li class="list-group-item">Info 2</>
                <li class="list-group-item">Info 3</>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= camps.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">$<%= camps.price %> / night</h4>
                    <h4><a><%= camps.name%></a></h4>
                    <p><%= camps.desc %></p>
                    <p>
                        <em>
                            Submitted by <%= camps.author.username %>
                        </em>
                    </p>
                    <% if (currentUser && camps.author.id.equals(currentUser._id)) { %>
                    <a class="btn btn-warning" href="/campgrounds/<%= camps._id %>/edit">Edit</a>
                    <form class="delete-form"action="/campgrounds/<%= camps._id %>?_method=delete" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= camps._id%>/comment/new">Review</a>
                </div>
                <hr>
                <% camps.posts.forEach(function(comment) { %>
                <div class="row">
                    <div class="col-md-12">
                         <strong><%= comment.author.username %></strong>
                         <span class="pull-right">10 days ago</span>
                        <p>
                            <%= comment.content %>
                        </p>
                         <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-xs btn-warning" href="/campgrounds/<%= camps._id %>/comment/<%= comment._id %>/edit">Edit</a>
                        <form class="delete-form" action="/campgrounds/<%= camps._id%>/comment/<%= comment._id%>?_method=delete" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                        <% } %>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>