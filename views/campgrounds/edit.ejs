<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%= camps.name %></h1>
        <div style="width:30%; margin:20px auto;">
            <form action="/campgrounds/<%= camps._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" placeholder="image name" value="<%= camps.name %>"></input>     
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" placeholder="price" min="0.00" step="0.01" value="<%= camps.price %>"></input>     
                </div>
                <div class="form-group">
                <input class="form-control" type="text" name="campground[image]" placeholder="image url" value="<%= camps.image %>"></input>
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="campground[desc]" placeholder="description" value="<%= camps.desc %>"></input>     
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
             <a href="/campgrounds/<%= camps._id%>">Go Back</a> 
        </div>
    
    </div>
</div>

<% include ../partials/footer %>