<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%= camps.name %></h1>
        <div style="width:50%; margin:20px auto;">
            <form action="/campgrounds/<%= camps._id %>?_method=PUT" method="POST">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Name">Name</label>
                        <input class="form-control" type="text" name="name" id="Name" value="<%= camps.name %>"></input>     
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Price">Price</label>
                        <input class="form-control" type="number" name="price" id="Price" min="0.00" step="0.01" value="<%= camps.price %>"></input>     
                    </div>
                </div>
                <div class="form-group">
                    <label for="lmage">Image Url</label>
                    <input class="form-control" type="text" name="image" id="Image" placeholder="image url" value="<%= camps.image %>"></input>
                </div>
                <div class="form-group">
                    <label for="Location">Location</label>
                    <input class="form-control" type="text" name="location" id="Location" value="<%= camps.location %>">
                </div>
                <div class="form-group">
                    <label for="Desc">Description</label>
                    <textarea class="form-control" type="text" name="desc" id="Desc" value="<%= camps.desc %>"></textarea>     
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
             <a href="/campgrounds/<%= camps._id%>">Go Back</a> 
        </div>
    
    </div>
</div>

<% include ../partials/footer %>