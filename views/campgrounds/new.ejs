<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align:center">Create a New Campground</h1>
        <div style="width:30%; margin:20px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="image name"></input>     
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.00" step="0.01"></input>     
                </div>
                <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image url"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="description"></input>     
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
             <a href="/campgrounds">Go Back</a> 
        </div>
    
    </div>
</div>

<% include ../partials/footer %>